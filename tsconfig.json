{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "declaration": false,
    "strict": true,
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "downlevelIteration": true,
    "noEmit": true,
    "target": "ES5"
  },
  "include": ["src", "declaration.d.ts"]
}
